<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.harris.harriswifibuddy.settings"
    tools:showIn="@layout/activity_settings">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/change_net_name"
        android:id="@+id/change_net_name"
        android:layout_marginTop="88dp"
        android:backgroundTint="#d81818"
        android:clickable="true"
        android:textColor="#ffffff"
        android:layout_below="@+id/settings"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/change_net_password"
        android:id="@+id/change_net_password"
        android:backgroundTint="#d81818"
        android:clickable="true"
        android:textColor="#ffffff"
        android:layout_below="@+id/change_net_name"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/about"
        android:id="@+id/about"
        android:backgroundTint="#d81818"
        android:clickable="true"
        android:textColor="#ffffff"
        android:layout_below="@+id/change_net_password"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/reset_repeater"
        android:backgroundTint="#d81818"
        android:clickable="true"
        android:textColor="#ffffff"
        android:text="@string/reset_repeater"
        android:layout_below="@+id/about"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Settings"
        android:id="@+id/settings"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/about"
        android:layout_alignEnd="@+id/about"
        android:layout_marginTop="31dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/back_from_settings"
        android:id="@+id/back_from_settings"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/change_net_password"
        android:clickable="true"
        android:layout_alignBottom="@+id/settings"
        android:layout_toLeftOf="@+id/change_net_password"
        android:backgroundTint="#dedede"
        android:textColor="#000000"
        android:onClick="onSettingsBackClick"/>

</RelativeLayout>
